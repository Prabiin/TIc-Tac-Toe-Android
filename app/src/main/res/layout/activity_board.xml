<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202"
    tools:context=".Board">

    <TextView
        android:id="@+id/update_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/finger_paint"
        android:textAlignment="center"
        android:textColor="#FDD835"
        android:textSize="48sp" />

    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_row"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn1"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn4"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_row"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn7"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="120dp"
            android:layout_height="147dp"
            android:backgroundTint="#E6EE9C"
            android:fontFamily="@font/finger_paint"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/msg_container"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/top_row"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:cardBackgroundColor="#E8E680"
        app:cardCornerRadius="20dp"
        app:strokeColor="@android:color/holo_red_light"
        app:strokeWidth="5dp">

        <TextView
            android:id="@+id/confirmation_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/finger_paint"
            android:padding="15dp"
            android:text="Do you want to play again?"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_row"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:elevation="1dp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_ok"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#E8E680"
            app:strokeColor="@android:color/holo_red_light"
            app:strokeWidth="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/finger_paint"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:text="O"
                android:textColor="#23CF23"
                android:textSize="60sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#E8E680"
            app:strokeColor="@android:color/holo_red_light"
            app:strokeWidth="5dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/finger_paint"
                android:text="X"
                android:textColor="#FFFF4444"
                android:textSize="60sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>